<div class="text-center higher-logo-margin">
    <%= image_tag("higher-black.png", size: "207x80", data: { title: 'Higher Logo' }) %>
</div>

<!--   <div class="wrapper"> -->
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <div class="form-wrapper">
            <h2>Log in, <%= resource_name %> !</h2>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder: 'j.lebowski@higher.com' %>
                <%= f.input :password, required: false, placeholder: '●●●●●●●●●●●●' %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn-form" %>
              </div>
            <% end %>
            <%= render "candidates/shared/links" %>
          </div>
      </div>
    </div>
  </div>
