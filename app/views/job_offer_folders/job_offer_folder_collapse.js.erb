// //MAKE FOLDER LEVELS COLLAPSEABLE
//     // make the folders at level 0 collapsable

   if ($( "<%= j '.folder-' + @job_offer_folder.id.to_s %>" ).hasClass('tree-folder-level-0')) {

        if ($("<%= j '.folder-' + @job_offer_folder.id.to_s %>").hasClass("folder-open")) {
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").removeClass("folder-open").addClass("folder-closed");
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").find(".fa-folder-open").addClass("fa-folder").removeClass("fa-folder-open");
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").nextUntil( ".tree-folder-level-0" ).hide()

        } else if ($("<%= j '.folder-' + @job_offer_folder.id.to_s %>").hasClass("folder-closed")) {
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").removeClass("folder-closed").addClass("folder-open");
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").nextUntil( ".tree-folder-level-0" ).not('.folder-closed').show()
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").nextUntil( ".tree-folder-level-0" ).removeClass("folder-closed").addClass("folder-open");
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").find(".fa-folder").addClass("fa-folder-open").removeClass("fa-folder");
          $("<%= j '.folder-' + @job_offer_folder.id.to_s %>").nextUntil( ".tree-folder-level-0" ).find(".fa-folder").addClass("fa-folder-open").removeClass("fa-folder");
        }

    };

