 // make the star yellow on click & vice versa
if ($( "<%= j '.folder-' + @job_offer_folder.id.to_s %>" ).find(".star-icon").hasClass("fa-star-o")) {
  $( "<%= j '.folder-' + @job_offer_folder.id.to_s %>" ).find(".star-icon").addClass("fa-star yellow").removeClass("fa-star-o gray-light");
}
else {
  $( "<%= j '.folder-' + @job_offer_folder.id.to_s %>" ).find(".star-icon").addClass("fa-star-o gray-light").removeClass("fa-star yellow");
}


